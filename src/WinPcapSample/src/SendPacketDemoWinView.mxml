<?xml version="1.0" encoding="utf-8"?>
<s:Window xmlns:fx="http://ns.adobe.com/mxml/2009" 
          xmlns:s="library://ns.adobe.com/flex/spark" 
          xmlns:mx="library://ns.adobe.com/flex/mx">
    
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    <fx:Style>
        @namespace s "library://ns.adobe.com/flex/spark";
        @namespace mx "library://ns.adobe.com/flex/mx";
        .dump_text
        {
            color: #000000;
            font-family: "MS Gothic";
        }
    </fx:Style>
    
    <s:VGroup width="100%" height="100%">
        <s:HGroup width="100%">
            <s:Label text="Source Mac Address:" width="30%" />
            <s:TextInput id="textInputSrcMac" />
        </s:HGroup>
        <s:HGroup width="100%">
            <s:Label text="Destination Mac Address:" width="30%" />
            <s:TextInput id="textInputDstMac" />
        </s:HGroup>
        <s:CheckBox id="checkBoxUseQueue" label="use SendQueue" />
        <s:Button id="btnSend" label="Send" />
        <s:TextArea id="textAreaDump" width="100%" height="100%" styleName="dump_text" />
    </s:VGroup>
    
</s:Window>